<div class="container">
  {{#each blogs as |blog|}}
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="headerRow">
          <h2>
            <a class="blogTitle text-uppercase" href="/blog/{{blog.id}}">{{blog.title}}</a>
          </h2>
          <p class="blogCreate text-right">
            {{blog.user.username}}
          </p>
        </div>
        <div class="blogDesc">
          <p class="text-center blogDescMain">
            {{blog.description}}
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
